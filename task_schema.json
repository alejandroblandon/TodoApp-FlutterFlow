{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "completed": {
            "type": "boolean"
        },
        "created": {
            "type": "string",
            "format": "date-time"
        },
        "details": {
            "type": "string"
        },
        "title": {
            "type": "string"
        },
        "user": {
            "type": "string",
            "pattern": "^/users/[A-Za-z0-9]+$"
        }
    },
    "required": [
        "title",
        "user",
        "created",
        "completed"
    ]
}